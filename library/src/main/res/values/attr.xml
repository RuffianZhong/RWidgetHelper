    <attr name="corner_radius_bottom_left" format="dimension" />
    <attr name="corner_radius_bottom_right" format="dimension" />

    <!--虚线边框宽度/间隔-->
    <attr name="border_dash_width" format="dimension" />
    <attr name="border_dash_gap" format="dimension" />

    <!--边框宽度-->
    <attr name="border_width_normal" format="dimension" />
    <attr name="border_width_pressed" format="dimension" />
    <attr name="border_width_unable" format="dimension" />
    <attr name="border_width_checked" format="dimension" />

    <!--边框颜色-->
    <attr name="border_color_normal" format="color" />
    <attr name="border_color_pressed" format="color" />
    <attr name="border_color_unable" format="color" />
    <attr name="border_color_checked" format="color" />

    <!--背景颜色-->
    <attr name="background_normal" format="color|reference" />
    <attr name="background_pressed" format="color|reference" />
    <attr name="background_unable" format="color|reference" />
    <attr name="background_checked" format="color|reference" />

    <!--Gradient相关-->
    <attr name="gradient_orientation">
        <enum name="TOP_BOTTOM" value="0" />
        <enum name="TR_BL" value="1" />
        <enum name="RIGHT_LEFT" value="2" />
        <enum name="BR_TL" value="3" />
        <enum name="BOTTOM_TOP" value="4" />
        <enum name="BL_TR" value="5" />
        <enum name="LEFT_RIGHT" value="6" />
        <enum name="TL_BR" value="7" />
    </attr>
    <attr name="gradient_type">
        <enum name="linear" value="0" />
        <enum name="radial" value="1" />
        <enum name="sweep" value="2" />
    </attr>
    <attr name="gradient_radius" format="dimension" />
    <attr name="gradient_centerX" format="float" />
    <attr name="gradient_centerY" format="float" />

    <!-- TextView相关属性 -->

    <!--文本颜色-->
    <attr name="text_color_normal" format="color" />
    <attr name="text_color_pressed" format="color" />
    <attr name="text_color_unable" format="color" />
    <attr name="text_color_checked" format="color" />

    <!--图标资源-->
    <attr name="icon_src_normal" format="reference" />
    <attr name="icon_src_pressed" format="reference" />
    <attr name="icon_src_unable" format="reference" />
    <attr name="icon_src_checked" format="reference" />

    <!--图标、大小、位置-->
    <attr name="icon_height" format="dimension" />
    <attr name="icon_width" format="dimension" />
    <attr name="icon_direction">
        <enum name="left" value="1" />
        <enum name="top" value="2" />
        <enum name="right" value="3" />
        <enum name="bottom" value="4" />
    </attr>

    <!--字体样式-->
    <attr name="text_typeface" format="string" />

    <!--drawable和text居中-->
    <attr name="icon_with_text" format="boolean" />

    <!--ViewGroup是否可用-->
    <attr name="enabled" format="boolean" />

    <!--Ripple相关-->
    <!--是否开启Ripple-->
    <attr name="ripple" format="boolean" />
    <!--Ripple颜色-->
    <attr name="ripple_color" format="color" />
    <!--Ripple波纹限制-->
    <attr name="ripple_mask" format="reference" />
