<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.ruffian.library.widget.RImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/iv_bg"
                android:scaleType="center"
                android:src="@mipmap/food"
                app:is_circle="true" />

            <com.ruffian.library.widget.RImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:background="@color/iv_bg"
                android:scaleType="fitXY"
                android:src="@mipmap/food"
                app:border_color="@color/colorAccent"
                app:border_width="2dp"
                app:is_circle="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.ruffian.library.widget.RImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/iv_bg"
                android:scaleType="fitStart"
                android:src="@mipmap/food"
                app:corner_radius="10dp" />

            <com.ruffian.library.widget.RImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="12dp"
                android:background="@color/iv_bg"
                android:scaleType="centerCrop"
                android:src="@mipmap/food"
                app:border_color="@color/colorAccent"
                app:border_width="2dp"
                app:corner_radius="10dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <com.ruffian.library.widget.RImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/iv_bg"
                android:scaleType="fitCenter"
                android:src="@mipmap/food"
                app:border_color="@color/colorAccent"
                app:border_width="0dp"
                app:corner_radius_bottom_left="10dp"
                app:corner_radius_top_left="10dp" />

            <com.ruffian.library.widget.RImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="16dp"
                android:background="@color/iv_bg"
                android:scaleType="centerInside"
                android:src="@mipmap/food"
                app:border_color="@color/colorAccent"
                app:border_width="0dp"
                app:corner_radius_bottom_right="10dp"
                app:corner_radius_top_right="10dp" />

            <com.ruffian.library.widget.RImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="16dp"
                android:background="@color/iv_bg"
                android:scaleType="fitEnd"
                android:src="@mipmap/food"
                app:border_color="@color/colorAccent"
                app:border_width="0dp"
                app:corner_radius_bottom_right="20dp"
                app:corner_radius_top_left="20dp"
                app:corner_radius_top_right="20dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>